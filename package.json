{
  "name": "testing-and-debugging-ensuring-mern-app-reliability",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "install-all": "npm --prefix ./client install && npm --prefix ./server install",
    "setup-test-db": "node ./server/tests/setup.js",
    "test": "jest --config ./jest.config.js",
    "test:client": "jest --config ./jest.config.js --selectProjects client",
    "test:server": "jest --config ./jest.config.js --selectProjects server",
    "test:unit": "jest --config ./jest.config.js --selectProjects client --selectProjects server --runInBand",
    "test:integration": "jest --config ./jest.config.js --selectProjects server",
    "test:e2e": "playwright test",
  "start": "node ./server/src/server.js",
    "test:e2e:headed": "playwright test --headed",
    "playwright:install": "npx playwright install --with-deps",
    "test:e2e:record": "playwright test --reporter=list"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "babel-jest": "^29.0.0",
    "cross-env": "^7.0.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^28.1.3",
    "mongodb-memory-server": "^8.12.0",
    "mongoose": "^8.19.3",
    "supertest": "^6.3.0",
    "@playwright/test": "^1.40.0"
  }
}
